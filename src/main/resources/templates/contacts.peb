<html>
<head>
  <meta charset="UTF-8">
  <title>Contacts</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/contacts.css">
</head>
<body>
  <div class="contactsWrapper">
    <form id="contactForm">
      <div class="messageFormWrapper">
        <h2>Contact me</h2>
        <p class="statusLabel" id="statusLabel"></p>
        <div class="input-container">
          <input type="text" id="senderName" class="contactsTextField" required pattern="[A-Za-z0-9 ]{1,20}">
          <label for="senderName" class="contactsLabel">Your name</label>
        </div>
        <div class="input-container">
          <input type="email" name="emailFrom" id="emailFrom" class="contactsTextField" required>
          <label for="emailFrom" class="contactsLabel">Email</label>
        </div>
        <div class="input-container">
          <textarea name="message" id="message" class="contactsTextField" required></textarea>
          <label for="message" class="contactsLabel">Message</label>
        </div>
        <p>
          <input type="submit" class="mailSubmit" value="Send message">
          <input type="reset" class="mailFormReset" value="Reset">
        </p>
      </div>
    </form>
  </div>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
  <script type="text/javascript" src="/js/message.js"></script>
</body>
</html>